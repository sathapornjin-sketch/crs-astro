---
import Base from './Base.astro';
import '../styles/layout_sidebar.scss';
const { title, description, bodyclass = '', cover = '/cover.png' } = Astro.props;
---

<Base title={title} description={description} bodyclass={bodyclass} cover={cover}>
	<div
		class="side-content mx-auto mt-4 grid w-full max-w-th-width-lg px-4 md:mt-5 md:grid-cols-[1fr_3fr] md:gap-[30px] md:px-5 lg:mt-6 lg:grid-cols-[1fr_4fr] lg:gap-10 xl:mt-[30px]"
	>
		<main id="content" class="order-1 pb-4 md:order-2 md:pb-5 lg:pb-6 xl:pb-[30px]">
			<slot />
		</main>
		<slot name="aside" class="order-2 md:order-1" />
	</div>
</Base>
