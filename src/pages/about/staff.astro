---

<Layout title="สำนักงานคณบดี" description="เจ้าหน้าที่ฝ่ายบริหารทั่วไป">
  <aside slot="aside" class="order-2 md:order-1">
		<Side />
	</aside>

  <article class="px-4">
    <h1 class="text-3xl font-bold mt-0">สำนักงานคณบดี</h1>

    {personnelSections.map(section => (
      <>
        <h2 class={`text-2xl font-semibold mb-4 text-gray-700 ${section.extraMarginTop ? 'mt-12' : 'mt-6'}`}>
  {section.title}
</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {section.people.map(p => (
            <div class="rounded-2xl border bg-white shadow hover:shadow-lg transition overflow-hidden w-full">
              {/* กรอบภาพขนาดเท่ากัน */}
              <div class="w-full aspect-[4/5] overflow-hidden rounded-t-2xl bg-white flex items-center justify-center">
                <img 
                   src={p.img} 
                   alt={p.name} 
                   class={`max-h-full max-w-full object-contain ${p.name === 'นางสาววรกานต์ จงแจ่ม' ? 'scale-110' : ''}`} 
                  />
            </div>
            <div class="p-4 text-center">
                    <h3 class="text-lg font-semibold mb-1">{p.name}</h3>
                    {/* แปลง \n เป็นบรรทัดใหม่ */}
                    <p class="text-gray-600 mb-1" set:html={p.position.replace(/\n/g, '<br>')}></p>  
                    {/* แสดงเบอร์โทร */}
                    {p.phone && (
                   <p class="text-gray-500 mb-1">{p.phone}</p>
                    )}  
                  <a href={`mailto:${p.email}`} class="text-blue-600 hover:underline text-sm">{p.email}</a>
            </div>

            </div>
          ))}
        </div>
      </>
    ))}
  </article>
</Layout>
