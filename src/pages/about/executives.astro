---
import Layout from '@/layouts/Layout_Sidebar.astro';
import Side from '@/components/about/Side.astro';

const personnelSections = [
  {
    title: "ผู้บริหาร",
    people: [
      { name: "ผู้ช่วยศาสตราจารย์ ดร.ไพเราะ มากเจริญ", position: "คณบดีวิทยาลัยศาสนศึกษา", email: "pairor.mak@mahidol.edu", phone: "02-800-2656", img: "/img/personnel/ผู้ช่วยศาสตราจารย์ ดร.ไพเราะ มากเจริญ.png" },
      { name: "Assoc. Prof. Dr.Milos Hubina", position: "รองคณบดีฝ่ายวิจัยและวิเทศสัมพันธ์", email: "milos.hub@mahidol.ac.th", img: "/img/personnel/Assoc. Prof. Dr.Milos Hubina.png" },
      { name: "อาจารย์ ดร.สุชาดา ศรีเศรษฐวรกุล", position: "รองคณบดีฝ่ายการศึกษาและกิจการนักศึกษา", email: "suchada.srs@mahidol.ac.th", img: "/img/personnel/อาจารย์ ดร.สุชาดา ศรีเศรษฐวรกุล.png" },
      { name: "อาจารย์ ดร.จิราธร ชาติศิริ", position: "ผู้ช่วยคณบดีฝ่ายการศึกษาและกิจการนักศึกษา", email: "jirathorn.cha@mahidol.ac.th", img: "/img/personnel/อาจารย์ ดร.จิราธร ชาติศิริ.png" },
    ]
  }
];
---

<Layout title="ผู้บริหาร" description="">
 <aside slot="aside" class="order-2 md:order-1">
		<Side />
	</aside>

  <article class="px-4">
    <h1 class="text-3xl font-bold mt-0 mb-6 text-center">ผู้บริหาร</h1>

    <!-- คณบดี -->
    <div class="flex justify-center mb-10">
  <div class="rounded-2xl border bg-white shadow hover:shadow-lg transition overflow-hidden w-80">
    <div class="w-full aspect-[4/5] flex items-center justify-center bg-white-100">
      <img src={personnelSections[0].people[0].img} alt={personnelSections[0].people[0].name} class="max-h-full max-w-full object-contain" />
    </div>
    <div class="p-4 text-center">
  <h3 class="text-base font-semibold mb-1 whitespace-nowrap overflow-hidden text-ellipsis">
    {personnelSections[0].people[0].name}
  </h3>

  <p class="text-gray-600 mb-1">{personnelSections[0].people[0].position}</p>

  {personnelSections[0].people[0].phone && (
    <p class="text-gray-600 mb-1 text-sm">{personnelSections[0].people[0].phone}</p>
  )}

  <a href={`mailto:${personnelSections[0].people[0].email}`} class="text-blue-600 hover:underline text-sm">
    {personnelSections[0].people[0].email}
  </a>
</div>

  </div>
</div>


    <!-- รองคณบดีและผู้ช่วยคณบดี -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
      {personnelSections[0].people.slice(1).map(p => (
        <div class="rounded-2xl border bg-white shadow hover:shadow-lg transition overflow-hidden w-72">
          <div class="w-full aspect-[4/5] flex items-center justify-center bg-white-100">
            <img src={p.img} alt={p.name} class="max-h-full max-w-full object-contain" />
          </div>
          <div class="p-4 text-center" style="word-wrap: break-word; white-space: normal;">
            <h3 class="text-lg font-semibold mb-1">{p.name}</h3>
            <p class="text-gray-600 mb-1">{p.position}</p>
            <a href={`mailto:${p.email}`} class="text-blue-600 hover:underline text-sm">{p.email}</a>
          </div>
        </div>
      ))}
    </div>
  </article>
</Layout>
