---
import Side from '@/components/about/Side.astro';
import PersonnelCard from '@/components/ui/PersonnelCard.astro';
import Layout from '@/layouts/Layout_Sidebar.astro';
import fs from 'fs/promises';
import Papa from 'papaparse';

interface PersonnelCsvSchema {
	name_th: string;
	name_en: string;
	position_th: string;
	position_en: string;
	email: string;
	image: string;
}

const csvPath = 'src/data/about/personnel/executives_data.csv';
const csvData = await fs.readFile(csvPath, 'utf-8');
const executives = Papa.parse<PersonnelCsvSchema>(csvData, { header: true }).data;

const title = 'คณะผู้บริหาร';
const description = 'คณะผู้บริหารของวิทยาลัยศาสนศึกษา มหาวิทยาลัยมหิดล';
---

<Layout title={title} description={description}>
	<aside slot="aside" class="order-2 md:order-1">
		<Side />
	</aside>
	<article>
		<h1 class="mt-0">{title}</h1>
		<p class="mb-6">{description}</p>

		<div class="mb-2 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
			{
				executives.map((executive) => (
					<PersonnelCard
						nameTh={executive.name_th}
						nameEn={executive.name_en}
						positionTh={executive.position_th}
						positionEn={executive.position_en}
						email={executive.email}
						image={`/img/personnel/${executive.image}`}
					/>
				))
			}
		</div>
	</article>
</Layout>
