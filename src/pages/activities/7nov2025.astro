---
import Layout from '@/layouts/Layout.astro';

const title = "พิธีบำเพ็ญกุศลปัณรสมวาร (15 วัน) ถวายเป็นพระราชกุศลแด่สมเด็จพระนางเจ้าสิริกิติ์ พระบรมราชินีนาถ พระบรมราชชนนีพันปีหลวง";
const date = "7 พฤศจิกายน 2568";
const description = "";
const gallery = [
  "/img/activities/nov2025/7nov2025/7nov2025-1.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-2.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-3.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-4.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-5.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-6.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-7.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-8.jpg",
  "/img/activities/nov2025/7nov2025/7nov2025-9.jpg",
]
 
---

<Layout title={title} description={description}>
  <article style="max-width:800px; margin:40px auto; padding:0 20px;">
    <h1>{title}</h1>
    <p style="color:#555; font-size:0.9rem;">{date}</p>

    <p>{description}</p>
    พิธีบำเพ็ญกุศลปัณรสมวาร (15 วัน) ถวายเป็นพระราชกุศลแด่สมเด็จพระนางเจ้าสิริกิติ์ พระบรมราชินีนาถ พระบรมราชชนนีพันปีหลวง
วันที่ 7 พฤศจิกายน 2568 มหาวิทยาลัยมหิดล จัดพิธีบำเพ็ญกุศลปัณรสมวาร (15 วัน) ถวายเป็นพระราชกุศลแด่สมเด็จพระนางเจ้าสิริกิติ์ พระบรมราชินีนาถ พระบรมราชชนนีพันปีหลวง เพื่อน้อมสำนึกในพระมหากรุณาธิคุณและแสดงความจงรักภักดี โดยมีศาสตราจารย์ นพ.ปิยะมิตร ศรีธรา อธิการบดีมหาวิทยาลัยมหิดล เป็นประธาน พร้อมด้วยผู้แทนจากส่วนงานต่างๆ ร่วมในงาน
ในการนี้ อาจารย์ ดร.บุญมี พวงเพชร อาจารย์และบุคลากรของวิทยาลัยศาสนศึกษาได้ร่วมพิธีทำบุญตักบาตรถวายเป็นพระราชกุศลอย่างพร้อมเพรียงกัน ณ สำนักงานอธิการบดี มหาวิทยาลัยมหิดล ศาลายา

    <p>
</p>
    <!-- Grid รูปเล็ก -->
    <div style="display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:10px; margin-top:20px;">
      {gallery.map((src, index) => (
        <img 
          src={src} 
          style="width:100%; height:220px; object-fit:cover; border-radius:6px; cursor:pointer;" 
          onclick={`document.getElementById('lb').style.display='flex'; document.getElementById('lb-img').src='${src}'`} 
        />
      ))}
    </div>

    <!-- Lightbox -->
    <div id="lb" style="
      display:none;
      position:fixed;
      inset:0;
      background:rgba(0,0,0,0.8);
      justify-content:center;
      align-items:center;
      z-index:9999;
      flex-direction:column;
    ">
      <button id="lb-close" style="
        position:absolute;
        top:20px;
        right:20px;
        font-size:2rem;
        color:white;
        background:none;
        border:none;
        cursor:pointer;
      ">×</button>
      <img id="lb-img" src="" style="max-width:90%; max-height:90%; border-radius:6px;" />
    </div>

    <script type="text/javascript">
      const lb = document.getElementById('lb');
      const lbImg = document.getElementById('lb-img');
      const lbClose = document.getElementById('lb-close');

      lbClose.addEventListener('click', () => { lb.style.display = 'none'; });
      lb.addEventListener('click', e => { if(e.target === lb) lb.style.display = 'none'; });
    </script>
  </article>
</Layout>
</Layout>