---
interface Props {
	title: string;
	class?: string;
}

const { title, class: className } = Astro.props;
---

<div class=`collapse collapse-arrow border border-base-300 bg-base-100 ${className}`>
	<input type="checkbox" />
	<div class="collapse-title font-semibold">{title}</div>
	<div class="collapse-content text-sm">
		<slot />
	</div>
</div>
